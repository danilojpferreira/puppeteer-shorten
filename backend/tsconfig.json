{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ESNext",                                
    "module": "commonjs",                           
    "outDir": "./dist",                              
    "noImplicitAny": false,                       
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,      
    "resolveJsonModule": true,
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules", "dist", 
  ]
}
